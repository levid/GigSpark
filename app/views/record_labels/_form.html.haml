= form_for @record_label do |f|
  -if @record_label.errors.any?
    #error_explanation
      %h2= "#{pluralize(@record_label.errors.count, "error")} prohibited this record_label from being saved:"
      %ul
        - @record_label.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
